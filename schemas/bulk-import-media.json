{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://chronosgraph.com/schemas/bulk-import-media.json",
  "title": "ChronosGraph Bulk Media Work Import Schema",
  "description": "JSON schema for importing media works with portrayals in bulk",
  "type": "object",
  "required": ["media_works"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "Data source name"
        },
        "author": {
          "type": "string",
          "description": "Person or organization who prepared this import"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "media_works": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "media_type"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300,
            "description": "Title of the media work"
          },
          "wikidata_id": {
            "type": "string",
            "pattern": "^Q\\d+$",
            "description": "Wikidata Q-ID (e.g., 'Q174583' for Gladiator). Optional but recommended."
          },
          "media_id": {
            "type": "string",
            "description": "Custom media identifier. If omitted, will use wikidata_id or generate one."
          },
          "media_type": {
            "type": "string",
            "enum": [
              "Film",
              "TVSeries",
              "TVEpisode",
              "Book",
              "Novel",
              "Play",
              "Opera",
              "VideoGame",
              "BoardGame",
              "Podcast",
              "Documentary",
              "FilmSeries",
              "BookSeries",
              "TVSeriesCollection",
              "GameSeries",
              "BoardGameSeries"
            ],
            "description": "Type of media work"
          },
          "release_year": {
            "type": "integer",
            "minimum": 1400,
            "maximum": 2100,
            "description": "Year of release/publication"
          },
          "creator": {
            "type": "string",
            "maxLength": 300,
            "description": "Primary creator (director, author, showrunner, etc.)"
          },
          "genre": {
            "type": "string",
            "maxLength": 100,
            "description": "Primary genre (e.g., 'Historical Drama', 'Epic', 'Biography')"
          },
          "description": {
            "type": "string",
            "maxLength": 2000,
            "description": "Brief description or synopsis (optional)"
          },
          "runtime_minutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Runtime in minutes (for films, episodes)"
          },
          "portrayals": {
            "type": "array",
            "description": "Historical figures portrayed in this work",
            "items": {
              "type": "object",
              "required": ["figure_identifier"],
              "properties": {
                "figure_identifier": {
                  "type": "string",
                  "description": "canonical_id, wikidata_id, or exact name of figure to link",
                  "examples": ["Q1430", "PROV:marcus-aurelius", "Marcus Aurelius"]
                },
                "actor_name": {
                  "type": "string",
                  "maxLength": 200,
                  "description": "Name of actor/performer who portrayed the figure"
                },
                "character_name": {
                  "type": "string",
                  "maxLength": 200,
                  "description": "Character name in the work (may differ from historical name)"
                },
                "is_protagonist": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether this figure is a protagonist/main character"
                },
                "sentiment": {
                  "type": "string",
                  "enum": ["heroic", "villainous", "neutral", "complex"],
                  "default": "neutral",
                  "description": "Portrayal sentiment"
                },
                "screen_time_minutes": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Approximate screen/page time (optional)"
                },
                "notes": {
                  "type": "string",
                  "maxLength": 500,
                  "description": "Additional notes about the portrayal"
                }
              },
              "additionalProperties": false
            }
          },
          "metadata": {
            "type": "object",
            "description": "Additional custom metadata (optional)",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
